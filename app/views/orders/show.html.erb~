<table class="table">
<tr>
  <th>Product</th>
  <th>Unit</th>
  <th>Price</th>
</tr>
<% @tot_p = BigDecimal.new(0) %>
<% @products.each do |p| %>
  <% if @farm != nil && p.farm_id == @farm.id %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.unit %></td>
      <td><%= number_to_currency(p.price) %></td> <% @tot_p = @tot_p + p.price %>
    </tr>
  <% elsif @dist != nil %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.unit %></td>
      <td><%= number_to_currency(p.price) %></td> <% @tot_p = @tot_p + p.price %>
    </tr>
  <% end %>
<% end %>
<tr>
  <td><strong>Total:</strong></td>
  <td></td>
  <td><%= number_to_currency(@tot_p) %></td>
</tr>
</table>
