<h1><%= @farm.name %></h1>

<p><%= link_to "Home", root_url %></p>

<div class="row">
<div class="col-xs-6">
<h2>Your Orders</h2>
<ul>
  <% @orders.each do |o| %>
  <% if o.placed != nil %>
  <% if DateTime.now.days_ago(7) < o.placed %>
  <li><%= link_to "#{o.name}", buyer_order_path(o.buyer_id, o) %> From <%= Buyer.find(o.buyer_id).name %>
     <%= link_to "Dismiss", dismiss_order_farm_path(@farm, o), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
  <% else %>
  <li><%= link_to "#{o.name}", buyer_order_path(o.buyer_id, o) %> From <%= Buyer.find(o.buyer_id).name %></li>
  <% end %>
  <% end %>
</ul>
</div>

<div class="col-xs-6">
<h2>Send Notifications</h2>
<%= form_for :notification, :url => sendnotif_farm_path(@farm), :html => {:method => :post} do |f| %>
  <%= f.text_area :notif %>
  <%= f.submit "Send"%>
<% end %> 
</div>
</div>

<div class="row">
<div class="col-xs-6"> 
<h2>Update your product listings</h2>
<p>
<%= form_for @farm, :url => upload_farm_path(@farm), method: :patch do |f| %>
  <%= f.file_field :file %>
  <%= f.submit "Upload" %>
<% end %>
</p>
<p><%= link_to "View and Edit Products", farm_products_path(@farm) %></p>
</div>
</div>

<p id="add_but"><strong>Add a product</strong></p>
<div id="add">
<%= form_for([@farm, @farm.products.build]) do |f| %>
  <p><%= f.label :name %><%= f.text_field :name %></p>
  <p><%= f.label :unit %><%= f.text_field :unit %></p>
  <p><%= f.label :price %><%= f.text_field :price %></p>
  <p><%= f.label :quantity %><%= f.number_field :quantity %></p>
  <p><%= f.label :category %><%= f.text_field :category %></p>
  <p><%= f.label :description %><%= f.text_area :description %></p>
  <p><%= f.label :notes %><%= f.text_area :notes %></p>
  <p><%= f.label :feature %><%= f.check_box :feature %></p>
  <p><%= f.submit %></p>
<% end %>
</div>


<h2 id="edit_but">Edit Account</h2>
<div id="edit" >
<%= form_for @user do |f| %>
  <p><%= f.label :name %> <%= f.text_field :name %></p>
  <p><%= f.label :email %><%= f.text_field :email %></p>
  <p><%= f.label :location %><%= f.text_field :location %></p>
  <p><%= f.submit %></p>
<% end %>
</div>



<script>
$(document).ready(function(){
    $(add).hide();

    $(add_but).click(function(){
        $(add).toggle();
    });

    $(edit).hide();

    $(edit_but).click(function(){
        $(edit).toggle();
    });


});
</script>
